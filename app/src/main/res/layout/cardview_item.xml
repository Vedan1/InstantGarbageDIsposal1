<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/cdLocation"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="B-50,SMRUTICHSNEW PANVEL"/>
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Garbage Type: "
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/cdGarbageType"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="Inorganic waste"/>
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end">


        <ImageView
            android:id="@+id/cdImageView"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:padding="10dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/showLocationBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Get Location"
            android:textSize="9sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/acceptButton"
            android:layout_margin="5dp"
            android:backgroundTint="@color/green"
            android:layout_width="75dp"
            android:textSize="9sp"
            android:layout_height="match_parent"
            android:text="ACCEPT"/>

        <Button
            android:id="@+id/rejectButton"
            android:layout_margin="5dp"
            android:backgroundTint="@color/red"
            android:layout_width="75dp"
            android:textSize="9sp"
            android:layout_height="match_parent"
            android:text="REJECT" />


        <TextView
            android:padding="25dp"
            android:id="@+id/showTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="ACCEPTED"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="18sp"/>




    </LinearLayout>


</androidx.cardview.widget.CardView>